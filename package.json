{
  "name": "automaton-backend",
  "version": "1.0.0",
  "description": "Computational Topology Canvas Backend",
  "main": "ui-server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only ui-server.ts",
    "build": "tsc",
    "start": "node ui-server.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:unit:watch": "jest tests/unit --watch",
    "test:unit:coverage": "jest tests/unit --coverage",
    "test:e2e": "CI=true playwright test --reporter=list --fully-parallel ",
    "test:e2e:headless": "CI=true playwright test tests/e2e/headless.spec.ts --reporter=list",
    "test:e2e:jsonl": "CI=true playwright test tests/e2e/jsonl-data-components.spec.ts --reporter=list",
    "test:e2e:metaverse": "CI=true playwright test tests/e2e/metaverse-portal-interface.spec.ts --reporter=list",
    "test:e2e:headed": "playwright test",
    "test:e2e:ui": "xvfb-run -a playwright test --ui",
    "test:e2e:debug": "xvfb-run -a playwright test --debug",
    "test:e2e:codegen": "xvfb-run -a playwright codegen",
    "test:e2e:install": "playwright install",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test && npm run test:e2e",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:start:prod": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop automaton-backend",
    "pm2:restart": "pm2 restart automaton-backend",
    "pm2:delete": "pm2 delete automaton-backend",
    "pm2:logs": "pm2 logs automaton-backend",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "pm2:save": "pm2 save",
    "pm2:startup": "pm2 startup",
    "deploy:pm2": "./deploy-pm2.sh",
    "deploy:pm2:prod": "./deploy-pm2.sh production"
  },
  "dependencies": {
    "@ai-sdk/openai-compatible": "^1.0.27",
    "@codemirror/commands": "^6.10.0",
    "@codemirror/lang-markdown": "^6.5.0",
    "@octokit/rest": "^22.0.1",
    "@opencode-ai/sdk": "^1.0.65",
    "@sentry/node": "^10.25.0",
    "@sentry/profiling-node": "^10.25.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/qrcode": "^1.5.6",
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "ethers": "^6.15.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "js-yaml": "^4.1.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "redis": "^5.9.0",
    "socket.io": "^4.8.1",
    "winston": "^3.18.3",
    "wordnet-db": "^3.1.14",
    "wordpos": "^2.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^27.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "automaton",
    "church-encoding",
    "computational-topology",
    "canvas",
    "self-reference"
  ],
  "author": "Automaton Team",
  "license": "MIT",
  "optionalDependencies": {
    "gpu.js": "^2.16.0"
  }
}
