{
  "name": "automaton-backend",
  "version": "1.0.0",
  "description": "Computational Topology Canvas Backend",
  "main": "ui-server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only ui-server.ts",
    "build": "tsc",
    "start": "node ui-server.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:e2e": "CI=true playwright test --reporter=list --fully-parallel ",
    "test:e2e:headless": "CI=true playwright test tests/e2e/headless.spec.ts --reporter=list",
    "test:e2e:jsonl": "CI=true playwright test tests/e2e/jsonl-data-components.spec.ts --reporter=list",
    "test:e2e:headed": "playwright test",
    "test:e2e:ui": "xvfb-run -a playwright test --ui",
    "test:e2e:debug": "xvfb-run -a playwright test --debug",
    "test:e2e:codegen": "xvfb-run -a playwright codegen",
    "test:e2e:install": "playwright install",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test && npm run test:e2e",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:start:prod": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop automaton-backend",
    "pm2:restart": "pm2 restart automaton-backend",
    "pm2:delete": "pm2 delete automaton-backend",
    "pm2:logs": "pm2 logs automaton-backend",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "pm2:save": "pm2 save",
    "pm2:startup": "pm2 startup",
    "deploy:pm2": "./deploy-pm2.sh",
    "deploy:pm2:prod": "./deploy-pm2.sh production"
  },
  "dependencies": {
    "@codemirror/commands": "^6.10.0",
    "@codemirror/lang-markdown": "^6.5.0",
    "@octokit/rest": "^20.0.0",
    "@opencode-ai/sdk": "^1.0.39",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "prom-client": "^15.0.0",
    "redis": "^4.6.10",
    "socket.io": "^4.8.1",
    "winston": "^3.11.0",
    "wordnet-db": "^3.1.14",
    "wordpos": "^2.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.19.24",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "automaton",
    "church-encoding",
    "computational-topology",
    "canvas",
    "self-reference"
  ],
  "author": "Automaton Team",
  "license": "MIT"
}
