# Domain Configuration
DOMAIN_COM=universallifeprotocol.com
DOMAIN_NET=universallifeprotocol.net
DOMAIN_ONLINE=universallifeprotocol.online

# Production URLs
BASE_URL_COM=https://universallifeprotocol.com
BASE_URL_NET=https://universallifeprotocol.net
BASE_URL_ONLINE=https://universallifeprotocol.online

# API URLs
API_URL_COM=https://universallifeprotocol.com/api
API_URL_NET=https://universallifeprotocol.net/api
API_URL_ONLINE=https://universallifeprotocol.online/api

# WebSocket URLs
WS_URL_COM=wss://universallifeprotocol.com
WS_URL_NET=wss://universallifeprotocol.net
WS_URL_ONLINE=wss://universallifeprotocol.online

# Application Configuration
NODE_ENV=production
PORT=5555
WS_PORT=5556
LOG_LEVEL=info

# Database Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=automaton123

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring Configuration
GRAFANA_PASSWORD=automaton123
PROMETHEUS_RETENTION=200h

# Docker Configuration
DOCKER_NETWORK=automaton-network
DOCKER_SUBNET=172.20.0.0/16

# Kubernetes Configuration
K8S_NAMESPACE=automaton
K8S_CLUSTER_ISSUER=letsencrypt-prod
K8S_INGRESS_CLASS=nginx

# Security Configuration
JWT_SECRET=your-jwt-secret-here
SESSION_SECRET=your-session-secret-here
CORS_ORIGIN=*

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Feature Flags
ENABLE_MONITORING=true
ENABLE_SSL=true
ENABLE_RATE_LIMITING=true
ENABLE_WEBSOCKETS=true

# Performance Configuration
MAX_MEMORY_RESTART=1G
MIN_UPTIME=10s
MAX_RESTARTS=10
RESTART_DELAY=4000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=40s