{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["./custom-instructions.md"],
"mcp": {
"wikipedia-mcp": {
"type: "local", 
"command": ["docker", "run", "-i", "--rm", "mcp/wikipedia-mcp" ],
"enabled": true,
},
"arxiv-mcp-server": {
"type: "local",
      "command": ["docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "ARXIV_STORAGE_PATH",
        "-v",
        "/home/main/automaton:/home/main/automaton",
        "mcp/arxiv-mcp-server"
      ],
"enabled": true,
      "environment": {
        "ARXIV_STORAGE_PATH": "/home/main/automaton/papers"
      }
	 }
   },

"claude-code": {

"type": "local",

"command": ["claude", "mcp", "server"],

"enabled": false,

"environment": {},

}},

  "provider": {
"open-router":{
"models": {
"z-ai/glm-4.5-air:free":{}
}
},
"ollama": {

"npm": "@ai-sdk/openai-compatible",

"name": "Ollama (local)",

"options": {

"baseURL": "http://localhost:11434/v1"

},

"models": {

"gpt-oss:20b": {

"name": "GPT OSS"

}

}

}


  },
  "agent": {
    "automaton-interface": {
      "description": "Primary interface for the continuous self-referencing automaton system",
      "mode": "primary",
      "model": "minimax/minimax-m2:free",
      "temperature": 0.3,
      "prompt": "{file:./.opencode/agent/automaton-interface.md}"
    }
  }
}